# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                      @controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)

GET           /signin                @controllers.UserHandler.signIn()
GET           /signup                @controllers.UserHandler.signUp()
POST          /signin                @controllers.UserHandler.checkSignIn()
POST          /signup                @controllers.UserHandler.save()
GET           /signout               @controllers.UserHandler.signOut()
GET           /addplace              @controllers.PlaceHandler.addPlace()
POST          /addplace              @controllers.PlaceHandler.savePlace()
GET           /profile/:email        @controllers.UserHandler.profile(email: String)
POST          /profile/:email        @controllers.UserHandler.updateUser(email: String)
GET           /users/                @controllers.UserHandler.userList()
DELETE        /users/:email          @controllers.UserHandler.delete(email: String)
GET           /places/               @controllers.PlaceHandler.placeList()
DELETE        /places/:id            @controllers.PlaceHandler.delete(id: Integer)
GET           /place/edit/:id        @controllers.PlaceHandler.editPlace(id: Integer)
GET           /place/:id             @controllers.PlaceHandler.viewPlace(id: Integer)
POST          /place/:id             @controllers.PlaceHandler.postComment(id: Integer)
GET           /admin                 @controllers.UserHandler.adminView()
GET           /addservice            @controllers.ServiceController.addService()
POST          /addservice            @controllers.ServiceController.save()