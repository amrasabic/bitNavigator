# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                      @controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)

GET           /signin                @controllers.UserController.signIn()
GET           /signup                @controllers.UserController.signUp()
POST          /signin                @controllers.UserController.checkSignIn()
POST          /signup                @controllers.UserController.save()
GET           /signout               @controllers.UserController.signOut()
GET           /addplace              @controllers.PlaceController.addPlace()
POST          /addplace              @controllers.PlaceController.savePlace()
GET           /profile/:email        @controllers.UserController.profile(email: String)
POST          /profile/:email        @controllers.UserController.updateUser(email: String)
GET           /users/                @controllers.UserController.userList()
DELETE        /users/:email          @controllers.UserController.delete(email: String)
GET           /places/               @controllers.PlaceController.placeList()
DELETE        /places/:id            @controllers.PlaceController.delete(id: Integer)
GET           /place/edit/:id        @controllers.PlaceController.editPlace(id: Integer)
GET           /place/:id             @controllers.PlaceController.viewPlace(id: Integer)
POST          /place/:id             @controllers.PlaceController.postComment(id: Integer)
GET           /admin                 @controllers.UserController.adminView()
GET           /addservice            @controllers.ServiceController.addService()
POST          /addservice            @controllers.ServiceController.save()